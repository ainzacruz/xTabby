{
    "manifest_version": 2,
    "name": "xTabby",
    "description": "K/A Extension allows us to close selected tabs on our browser",
    "version": "1.0",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "permissions": ["storage", "tabs"],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "images/icon.png"
      },
      "icons": {
          "16": "images/icon.png"
      }
  }